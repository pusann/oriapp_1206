<!--
templates/edit.html
記事編集ページ
-->
{ % extends "layout.html" %}
{% block content %}

<br>
<h1>MY Blog Name |管理人ページ</h1>
<p>こんにちは、{{name}}さん</p>
<link rel="stylesheets" href="article/articles.css">
<div class="main-container">
  <div class="admin-main-menu">
    <h2>新規投稿</h2>
    <div class="edit">
      <form action="/admin/add" method="post">
       <h3>タイトル</h3>
       <input type="text" name="title" value="">
       <h3>スラッグ</h3>
       <input type="text" name="slug" value="">
       <h3>内容</h3>
       <texttarea name="contents" id="contents"></textarea>
       <h3>カテゴリ</h3>
       {% for cat in categories %}
       <input type="radio" name="category" value="{{cat['slug']}}">{{cat['name']}}
       {% endfor %}
       <h3>タグ</h3>
       {% for tag in tags %}
       <input type="checkbox" name="tags[]"value="{{tag['slug']}}">{{tag['name']}}
       {% endfor %}
       <h3>詳細・抜粋</h3>
       <texttarea name="description" id="description"></textarea>
       <p>
         <button type="submit"name="draft" id="draft">下書き保存</button>
         <button type="submit"name="preview" value="preview" id="preview" formtarget="_blank">プレビュー</button>
         <button type="submit"name="release" value="release"id="release">公開</button>
        </p>
      </form>
    </div>
  </div>
  <div class="admin-side-menu">
    <h2>Menu</h2>
    <ul>
    <li><a href="/admin/user">ユーザー確認・編集</a></li>
    <li><a href="/admin/new">新規追加</a></li>
    <li><a href="/admin">投稿一覧</a></li>
    </ul>
  </div>
</div>
{% endblock %}


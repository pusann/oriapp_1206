<%#= render "shared/second-header"%>
<head>
   <%= form_with model: @user,url: user_registration_path,class:'registration-main', local: true do |f| %>
    <link rel="stylesheets" href="/registration.css">
   </head>
      <div class='form-wrap'>
      <div class='form-header'>
      <h1 class='form-header-text'>
         会員情報入力
      </h1>
     </div>
    
<body>
  <%#= render 'shared/error_massages',model: f.object %>
  <div class="image-singup" style="background:url(images/sin.png); background-size:cover;">
      <div class="form-group">
      <div class='form-text-wrap'>
       <label class="form-text">お名前（全角)</label>
       <span class="indispensable">必須</span>
       </div>
        <div class='input-name-wrap'>
           <%= f.text_area :first_name, class: "input-name",id:"first_name",placeholder: "例) 山田"%>
           <%= f.text_area :last_name, class: "input-name",id:"last_name",placeholder: "例) 太郎"%>
        </div>
  <div class= "form-group">
    <div class= 'form-text-wrap'>
     <label class="form-text">お名前（カナ)</label>
     <span class="indispensable">必須</span>
  </div>
  <div class='input-name-wrap'>
    <%= f.text_area :first_name_kana, class: "input-name",id:"first_name_kana",placeholder: "例) ヤマダ"%>
   <%= f.text_area :last_name_kana, class: "input-name",id:"last_name_kana",placeholder: "例) タロウ"%>
  </div>
  </div>
  <div class= "form-group">
     <div class='form-text-wrap'>
     <label class="form-text">ニックネーム</label>
     <span class="undispensable">必須</span>
     </div>
  <%= f.text_area :nickname,class:"input-default",id:"nickname",placeholder:"例）ori太郎",maxlength:"40"%>
  </div>
  <div class= "form-group">
    <div class='form-text-wrap'>
     <label class="form-text">メールアドレス</label>
    <span class="undispensable">必須</span>
    </div>
  <%= f.email_field :email,class:"input-default",id:"email",placeholder:"PC・携帯どちらでも可",autofocus: true %>
  </div>

  <p>性別</p>
  <select name="sex_id">
    <option value="男性">男性</option>
    <option value="女性">女性</option>
    </select>


  <div class= "form-group">
     <div class='form-text-wrap'>
     <label class="form-text">年齢</label>
     <span class="undispensable">必須</span>
     </div>
    <%= f.text_area :age,class:"input-default",id:"age",placeholder:"年齢を教えてください"%>
  </div>
  <div class= "form-group">
     <div class='form-text-wrap'>
     <label class="form-text">カテゴリー</label>
     <span class="undispensable">必須</span>
     </div>
        <%= f.collection_select( :category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
  </div>

  <div class= "form-group">
     <div class='form-text-wrap'>
     <label class="form-text">パスワード</label>
     <span class="undispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class= "form-group">
     <div class='form-text-wrap'>
     <label class="form-text">パスワード(確認)</label>
     <span class="undispensable">必須</span>
    </div>
   <%= f.password_field :password_confirmation,class:"input-default",id:"password_confirmation",placeholder:"同じパスワードを入力してください"%>
  </div>
  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>
 </div>
</div>
</form>
</body>
<% end %>
<%#= render "shared/second-footer" %>